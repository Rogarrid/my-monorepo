{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "baseUrl": "./",
  "outDir": "./dist",
  "paths": {
    "@packages/*": ["packages/*"]
  },
  "include": ["packages/**/*", "packages/api/types/**/*", "packages/api/*.js"]
}
