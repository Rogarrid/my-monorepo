{
  "name": "my-monorepo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "generate:prisma-client": "cd packages/api/prisma && npx prisma generate",
    "build": "tsc --outDir ./dist",
    "start:dev": "npm run generate:prisma-client && npm run build && concurrently \"tsc --watch --outDir ./dist\" \"nodemon ./dist/api/index.js\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.6",
    "typescript": "^5.6.2"
  }
}
